<h1>Restaurants</h1>
<%= link_to "Add a New Restaurant", new_restaurant_path, class: "btn btn-primary" %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.category %></td>
        <td><%= restaurant.address %></td>
        <td><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
